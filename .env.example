# SpotOn Frontend Environment Configuration
# Copy this file to .env.local for development

# =============================================================================
# API Configuration
# =============================================================================

# Backend API base URL
VITE_API_BASE_URL=http://localhost:8000

# WebSocket base URL  
VITE_WS_BASE_URL=ws://localhost:8000

# =============================================================================
# Feature Flags
# =============================================================================

# Enable analytics page functionality
VITE_ENABLE_ANALYTICS=true

# Enable mock data mode for development
VITE_ENABLE_MOCK_DATA=false

# Enable debug mode with additional logging
VITE_ENABLE_DEBUG_MODE=true

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# Performance Settings
# =============================================================================

# Detection confidence threshold (0.0 - 1.0)
VITE_DETECTION_CONFIDENCE_THRESHOLD=0.5

# Re-identification similarity threshold (0.0 - 1.0)
VITE_REID_SIMILARITY_THRESHOLD=0.65

# Target frames per second for display
VITE_TARGET_FPS=23

# JPEG quality for frame compression (1-100)
VITE_FRAME_JPEG_QUALITY=90

# =============================================================================
# UI Settings
# =============================================================================

# Maximum number of trajectory points to display
VITE_MAX_TRAJECTORY_POINTS=100

# UI update interval in milliseconds
VITE_UPDATE_INTERVAL_MS=100

# WebSocket reconnection delay in milliseconds
VITE_WEBSOCKET_RECONNECT_DELAY=3000

# =============================================================================
# Application Metadata (populated during build)
# =============================================================================

# Application version
VITE_APP_VERSION=1.0.0

# Build timestamp
VITE_BUILD_TIME=

# Git commit hash
VITE_GIT_COMMIT=